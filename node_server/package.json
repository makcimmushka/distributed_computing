{
  "name": "node_server",
  "version": "1.0.0",
  "description": "Socket/RMI server",
  "main": "index.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npm run prebuild && npm i && tsc",
    "start:server": "npm run build && node dist/main.js",
    "start:client": "node dist/client-socket.js",
    "start:dev:server": "tsnd --respawn --quiet ./src/main.ts",
    "start:dev:client": "tsnd --respawn --quiet ./src/client-socket.ts",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Maksym Kovalchuk",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/node": "^15.12.2",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "kill-port": "^1.6.1",
    "mysql2": "^2.2.5",
    "socket.io": "^4.1.2",
    "socket.io-client": "^4.1.2"
  }
}
